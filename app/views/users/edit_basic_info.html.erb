<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '更新') %>

<div class="ccontainer">
   <h1>基本情報編集</h1> 
       
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>


            <%= f.label :work_time, "指定勤務時間", class: "label-#{yield(:class_text)}" %>
            <%= f.time_field :work_time, class: "form-control" %>
            
            <%= f.label :basic_time, "基本時間", class: "label-#{yield(:class_text)}" %>
            <%= f.time_field :basic_time, class: "form-control" %>

            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
 　　　　 </div>
</div>